{
  "manifest_version": 2,

  "name": "GitHub Pull Request notifier for Chrome",
  "description": "Chrome extension to show a notification when a new GitHub pull request is raised on chosen repositories.",
  "version": "1.0",
  "icons": {
    "128": "icons/github.png"
  },

  "background": {
    "scripts": ["background/background.js"],
    "persistent": true 
  },
  "browser_action": {
    "default_icon": "icons/github.png",
    "default_popup": "client/popup.html"
  },
  "permissions": [
    "activeTab",
    "background",
    "notifications",
    "storage",
    "*://github.com/"
  ]
}
